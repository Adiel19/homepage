body{
	background-color: #EFFFDA;
	width: 100%;
	height: 100%;
	padding-top: 100px;
	padding-bottom:100px;
}

.border_shadow{
  border: 2px #e4e4e4 solid;
  padding: 0px;
  border-radius: 4px;
  box-shadow: 0 0 10px #ccc;
  background-color: #ffffff;
}
h1{
  font-family: 'Pacifico', cursive;
  font-size: 350%;
  color:  #daf1ff;
}
h2{
	font-family: 'Ubuntu Condensed';
	font-size: 150%;
	color: #c4d8e5;
}
.home {
  width: 90%;
  height: 500px;
  background-image:url('img/home.jpg');
	background-size: cover;
}
.home img {
width: 100%;
}
.name {
  font-weight:800;
  padding-top:100px;
	padding-right:0px;
	padding-left:0px;
  text-align:center;
	text-shadow: 2px 2px #ff0000;
}
.line {
	padding-top:150px;
	padding-right:20px;
	padding-left:20px;
}

.bio {
  font-weight:100;
	padding:0px;
  text-align:center;
}
SPAN.glow { 
	text-shadow: black 0px 0px 5px;
}
.console {
	color: #ff0000;
}
.twittericon {
	display: inline-block;
	background: url(icons/twitter.png) no-repeat;
	padding:20px;
}
.emailicon {
	display: inline-block;
	background: url(icons/mail.png) no-repeat;
	padding:20px;
}

.giticon {
	display: inline-block;
	background: url(icons/github.png) no-repeat;
	padding:20px;
}
